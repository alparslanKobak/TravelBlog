@model IEnumerable<TravelBlog.Models.Region>


<style>

    .region-header {
        background-size: cover;
        background-position: center;
        height: 150px;
        display: flex;
        align-items: center;
        justify-content: center;
        background-color: #b7b09c;
    }

    .region-title {
        color: #fff;
        background-color: rgba(0, 0, 0, 0.5);
        padding: 10px 20px;
        border-radius: 10px;
        font-size: 3rem;
        text-shadow: 2px 2px 4px #000;
    }

    .card-custom {
        transition: transform .3s ease-in-out;
        box-shadow: 0 4px 8px rgba(107, 70, 35, 0.2);
    }

        .card-custom:hover {
            transform: scale(1.03);
            box-shadow: 0 8px 16px rgba(107, 70, 35, 0.4);
        }
</style>

<div class="region-header mt-4 border border-secondary ">
    <h1 class="region-title">All Regions</h1>
</div>

<div class="row mt-5">
    @foreach (var item in Model)
    {
        <div class="col-md-4">
            <div class="card mb-4  text-center  card-custom">
                <img class="card-img-top" src="~/Content/images/@item.Image" alt="@item.Name" style="width: 100%; height: 225px; object-fit: cover;">
                <div class="card-body">
                    <h5 class="card-title">@item.Name</h5>
                    <div class="d-flex justify-content-center align-items-center">
                        <div class="btn-group">
                            @Html.ActionLink("Details", "Details", new { id = item.Id }, new { @class = "btn btn-sm btn-outline-info" })
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>
